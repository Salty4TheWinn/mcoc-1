{
    "compilerOptions": {
        "outDir": "js/dist",
        "declaration": true,
        "module": "commonjs",
        "lib": ["es6", "dom"],
        "target": "es6",
        "sourceMap": true,
        "jsx": "react",
        "allowJs": false,
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true
    },
    "files": [
        "src/index.ts"
    ],
    "types": [
        "typePatches"
    ]
}